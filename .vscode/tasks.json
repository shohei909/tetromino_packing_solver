{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm:dev",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": [
          {
            "regexp": ".*",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "vite v\\d+\\.\\d+\\.\\d+.*",
          "endsPattern": "Local:.*http://localhost:8080"
        }
      }
    },
    {
      "label": "npm:build",
      "type": "shell",
      "command": "npm run build",
      "group": "build",
      "problemMatcher": "$tsc"
    },
    {
      "label": "run: all",
      "dependsOn": ["npm:build", "npm:dev"],
      "group": "build",
      "type": "shell",
      "problemMatcher": []
    }
  ]
}
